mixin head(data)
	title= data.title
	meta(charset="utf-8")
	
	meta(content=data.description name="description")
	
	meta(name="viewport" content="width=device-width, initial-scale=1.0")
	meta(name="HandheldFriendly" content="true")
	meta(name="format-detection", content="telephone=no")
	meta(content="IE=edge" http-equiv="X-UA-Compatible")
	
	// Стили прелоадера
	<style>.preloader-shown{overflow: hidden;}.preloader{position:fixed;z-index:10000;top:0;left:0;right:0;bottom:0;background-color:#fd93c6;display:flex;align-items:center;justify-content:center;}.preloader video{flex:0 0 auto;max-width:100%;max-height:100%;width:auto;height:auto;object-fit:contain;}</style>
	
	// Фавиконка
	
	// Шрифт
	link(href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i&display=swap&subset=cyrillic" rel="stylesheet")
	
	// CSS
	link(rel="stylesheet", href="css/main.css")